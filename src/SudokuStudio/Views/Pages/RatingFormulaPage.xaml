<Page
	x:Class="SudokuStudio.Views.Pages.RatingFormulaPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:m="using:SudokuStudio.Markup"
	xmlns:p="using:SudokuStudio.Views.Pages"
	xmlns:w="using:CommunityToolkit.WinUI.Controls"
	mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=p:RatingFormulaPage}">
	<StackPanel Margin="{StaticResource ContentAlignedWithNavigationViewHeaderMargin}" Spacing="4">
		<TextBlock Text="{m:R Key=RatingFormulaPage_Intro}" Margin="0,10,0,0" />
		<w:SettingsCard
			Header="{m:R Key=RatingFormulaPage_BuiltInFormulae}" Description="{m:R Key=RatingFormulaPage_BuiltInFormulaeDescription}"
			IsClickEnabled="True"
			Click="GoToBuiltInFormulaeButton_Click" />
		<w:SettingsCard
			Header="{m:R Key=RatingFormulaPage_CustomizedFormulae}" Description="{m:R Key=RatingFormulaPage_CustomizedFormulaeDescription}"
			IsClickEnabled="True"
			Click="GoToCustomizedFormulaeButton_Click" />
		<w:SettingsCard
			Header="{m:R Key=RatingFormulaPage_FunctionsDefined}" Description="{m:R Key=RatingFormulaPage_FunctionsDefinedDescription}"
			IsClickEnabled="True"
			Click="GoToFunctionsDefinedButton_Click" />
	</StackPanel>
</Page>
