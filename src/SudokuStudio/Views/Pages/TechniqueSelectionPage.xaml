<Page
	x:Class="SudokuStudio.Views.Pages.TechniqueSelectionPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:c="using:SudokuStudio.Views.Controls"
	xmlns:p="using:SudokuStudio.Views.Pages"
	mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=p:TechniqueSelectionPage}"
	Loaded="Page_Loaded">
	<Grid ColumnDefinitions="*,*" Margin="{StaticResource ContentAlignedWithNavigationViewHeaderMargin}">
		<ScrollViewer Grid.Column="0">
			<c:TechniqueView
				x:Name="TechniqueCoreView" SelectionMode="Multiple"
				SelectedTechniquesChanged="TechniqueCoreView_SelectedTechniquesChanged" />
		</ScrollViewer>
	</Grid>
</Page>
