<Page
	x:Class="SudokuStudio.Views.Pages.Formulae.FunctionPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:m="using:SudokuStudio.Markup"
	xmlns:pf="using:SudokuStudio.Views.Pages.Formulae"
	mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=pf:FunctionPage}"
	Loaded="Page_LoadedAsync">
	<ScrollViewer>
		<StackPanel Margin="{StaticResource ContentAlignedWithNavigationViewHeaderMargin}">
			<TextBlock Text="{m:R Key=FunctionPage_Intro}" Margin="0,10" />
			<StackPanel x:Name="FunctionsDisplayer" Spacing="4">
				<StackPanel.ChildrenTransitions>
					<AddDeleteThemeTransition />
				</StackPanel.ChildrenTransitions>
			</StackPanel>
		</StackPanel>
	</ScrollViewer>
</Page>
