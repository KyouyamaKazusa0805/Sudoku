<Page
	x:Class="SudokuStudio.Views.Pages.Formulae.UserDefinedFormulaePage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:m="using:SudokuStudio.Markup"
	xmlns:pf="using:SudokuStudio.Views.Pages.Formulae"
	mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=pf:UserDefinedFormulaePage}"
	Loaded="Page_Loaded">
	<ScrollViewer>
		<Grid RowDefinitions="*,Auto" Margin="{StaticResource ContentAlignedWithNavigationViewHeaderMargin}">
			<StackPanel Grid.Row="0" x:Name="FormulaeDisplayer" Spacing="4">
				<TextBlock Text="{m:R Key=UserDefinedFormulaePage_Intro}" Margin="0,10" />
			</StackPanel>
			<Border
				Grid.Row="1" HorizontalAlignment="Stretch" BorderBrush="{ThemeResource SolvingStepItemForeground}"
				BorderThickness="0,2,0,0">
				<Button
					x:Name="AddFormulaButton" Margin="10" Content="{m:R Key=UserDefinedFormulaePage_AddFormula}"
					Click="AddFormulaButton_Click" />
			</Border>
		</Grid>
	</ScrollViewer>
</Page>
