<Page
	x:Class="SudokuStudio.Views.Pages.ContentDialogs.AddOnePuzzleDialogContent"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:m="using:SudokuStudio.Markup"
	xmlns:pd="using:SudokuStudio.Views.Pages.ContentDialogs"
	mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=pd:AddOnePuzzleDialogContent}">
	<StackPanel Spacing="4">
		<TextBlock Text="{m:R Key=LibraryPage_AddOnePuzzleDialogInputTextCode}" />
		<TextBox x:Name="TextCodeInput" x:FieldModifier="internal" TextChanged="TextCodeInput_TextChanged" />
		<TextBlock
			x:Name="WarningTextDisplayer" Foreground="Red"
			Text="{m:R Key=LibraryPage_AddOnePuzzleDialogTextCodeIsInvalid}" Visibility="Collapsed" />
	</StackPanel>
</Page>
