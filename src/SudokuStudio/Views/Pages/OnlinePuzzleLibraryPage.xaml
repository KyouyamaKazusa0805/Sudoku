<Page
	x:Class="SudokuStudio.Views.Pages.OnlinePuzzleLibraryPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:m="using:SudokuStudio.Markup"
	xmlns:p="using:SudokuStudio.Views.Pages"
	mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=p:OnlinePuzzleLibraryPage}"
	Loaded="Page_LoadedAsync" Unloaded="Page_Unloaded">
	<StackPanel
		x:Name="PuzzleLibrariesOnGitHubDisplayer" Margin="{StaticResource ContentAlignedWithNavigationViewHeaderMargin}"
		Spacing="4">
		<StackPanel.ChildrenTransitions>
			<AddDeleteThemeTransition />
		</StackPanel.ChildrenTransitions>

		<TextBlock Text="{m:R Key=OnlinePuzzleLibraryPage_Intro}" />
		<TextBlock x:Name="ErrorDisplayer" Foreground="Red" />
		<ProgressRing x:Name="IsActiveProgressRing" Width="64" Height="64" />
	</StackPanel>
</Page>
