<UserControl
	x:Class="SudokuStudio.Views.Controls.DefaultableSettingsCard"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:c="using:SudokuStudio.Views.Controls"
	xmlns:w="using:WinUICommunity"
	mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=c:DefaultableSettingsCard}">
	<w:SettingsCard
		Header="{x:Bind Header}" Description="{x:Bind Description}"
		ActionIcon="{x:Bind ActionIcon}" HeaderIcon="{x:Bind HeaderIcon}"
		IsActionIconVisible="True" ContentAlignment="{x:Bind ContentAlignment}">
		<w:SettingsCard.Content>
			<StackPanel Orientation="Horizontal" Spacing="6">
				<ContentPresenter Content="{x:Bind Content}" />
				<Button Click="Button_Click">
					<Button.Content>
						<SymbolIcon Symbol="Undo" />
					</Button.Content>
				</Button>
			</StackPanel>
		</w:SettingsCard.Content>
	</w:SettingsCard>
</UserControl>
