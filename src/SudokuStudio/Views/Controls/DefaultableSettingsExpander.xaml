<UserControl
    x:Class="SudokuStudio.Views.Controls.DefaultableSettingsExpander"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:c="using:SudokuStudio.Views.Controls"
	xmlns:w="using:WinUICommunity"
	mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=c:DefaultableSettingsExpander}">
	<w:SettingsExpander
		Header="{x:Bind Header}" Description="{x:Bind Description}"
		ItemsHeader="{x:Bind ItemsHeader}" ItemsFooter="{x:Bind ItemsFooter}"
		Items="{x:Bind Items}" ItemsSource="{x:Bind ItemsSource}"
		HeaderIcon="{x:Bind HeaderIcon}">
		<w:SettingsExpander.Content>
			<StackPanel Orientation="Horizontal" Spacing="6">
				<ContentPresenter Content="{x:Bind Content}" />
				<Button Click="Button_Click">
					<Button.Content>
						<SymbolIcon Symbol="Undo" />
					</Button.Content>
				</Button>
			</StackPanel>
		</w:SettingsExpander.Content>
	</w:SettingsExpander>
</UserControl>
