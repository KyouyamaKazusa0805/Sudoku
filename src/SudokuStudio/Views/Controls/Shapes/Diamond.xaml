<UserControl
	x:Class="SudokuStudio.Views.Controls.Shapes.Diamond"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:s="using:SudokuStudio.Views.Controls.Shapes"
	mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=s:Diamond}">
	<Viewbox x:Name="ParentViewBox" Stretch="Uniform" Margin="6" SizeChanged="ParentViewBox_SizeChanged">
		<Path
			x:Name="PathPresenter" Stroke="{x:Bind Background,Mode=OneWay}" StrokeThickness="{x:Bind StrokeThickness,Mode=OneWay}"
			Data="M8,0 L16,8 L8,16 L0,8 Z" />
	</Viewbox>
</UserControl>
