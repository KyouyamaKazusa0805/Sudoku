<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<RootNamespace>Sudoku</RootNamespace>
		<Description>Provides all core implementations of sudokus, such as a grid.</Description>
		<DocumentationFile>..\docxml\Sudoku.Core.xml</DocumentationFile>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="ExpressiveParser" Version="2.5.0" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\System\SystemExtensions.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Compile Update="Strings\InternalResources.Designer.cs">
			<DesignTime>True</DesignTime>
			<AutoGen>True</AutoGen>
			<DependentUpon>InternalResources.resx</DependentUpon>
		</Compile>
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Update="Strings\InternalResources.resx">
			<Generator>ResXFileCodeGenerator</Generator>
			<LastGenOutput>InternalResources.Designer.cs</LastGenOutput>
		</EmbeddedResource>
	</ItemGroup>

	<!--Hide some types that are not impl'ed correctly for now-->
	<ItemGroup>
		<Compile Remove="Algorithm\MinLex\BestTriplet.Impl.cs" />
		<Compile Remove="Algorithm\MinLex\GridPattern.Impl.cs" />
		<Compile Remove="Algorithm\MinLex\MinLexCandidate.Impl.cs" />
		<Compile Remove="Algorithm\MinLex\MinLexEntry.Impl.cs" />
	</ItemGroup>
	<Target Name="MinLexHidden" BeforeTargets="BeforeBuild">
		<ItemGroup>
			<Compile Remove="Algorithm\MinLex\BestTriplet.cs" Visible="false" />
			<Compile Include="Algorithm\MinLex\BestTriplet.Impl.cs" Visible="false" />
		</ItemGroup>
		<ItemGroup>
			<Compile Remove="Algorithm\MinLex\GridPattern.cs" Visible="false" />
			<Compile Include="Algorithm\MinLex\GridPattern.Impl.cs" Visible="false" />
		</ItemGroup>
		<ItemGroup>
			<Compile Remove="Algorithm\MinLex\MinLexCandidate.cs" Visible="false" />
			<Compile Include="Algorithm\MinLex\MinLexCandidate.Impl.cs" Visible="false" />
		</ItemGroup>
		<ItemGroup>
			<Compile Remove="Algorithm\MinLex\MinLexEntry.cs" Visible="false" />
			<Compile Include="Algorithm\MinLex\MinLexEntry.Impl.cs" Visible="false" />
		</ItemGroup>
	</Target>

</Project>
